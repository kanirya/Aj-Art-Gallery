@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Artistry</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-K5m8z0D9L5L4vE1FqOZpMyFvOB+vSTO0jqhr+V+2E6lbI2e+zQqE5xytHZhGm7uOIf9vPoG7+nCxTxuQ+z+XWg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/components.css" />
    @{
        var title = ViewData["css"]?.ToString() ?? "Artistry";
    }

    <link rel="stylesheet" href="~/css/@(title).css" />

<style>
        .mobile-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 50px;
            background: #fff;
            border-top: 1px solid #eaeaea;
            display: flex;
            justify-content: space-around;
            align-items: center;
            box-shadow: 0 -3px 15px rgba(0,0,0,0.05);
            z-index: 100;
        }

            .mobile-nav a {
                flex: 1;
                text-align: center;
                color: #777;
                transition: all 0.15s ease-in-out;
                transform: translateY(0);
            }

                .mobile-nav a i {
                    font-size: 1.2rem;
                    transition: all 0.15s ease-in-out;
                }

                .mobile-nav a:active {
                    transform: translateY(-1px) scale(0.95);
                }

                .mobile-nav a.active {
                    color: #000;
                    transform: translateY(-4px);
                }

                    .mobile-nav a.active i {
                        font-weight: 900;
                        transform: scale(1.15);
                    }

                .mobile-nav a:hover {
                    color: #000;
                }

</style>

</head>
<body>
    @{
        var hideHeader = ViewData["HideHeader"] as bool? ?? false;
        if (!hideHeader)
        {
            <header class="site-header ">
                <div class="container nav justify-content-between" role="navigation" aria-label="Main">
                        <!-- Logo Section -->
                        <a asp-controller="Home" asp-action="Index">
                            <div class="logo" style="display:flex; align-items:center; gap:10px; font-size:20px; font-weight:600;">
                                <img src="/images/logo/logo.svg" width="40" height="40" />
                               
                            </div>
                        </a>


                        <!-- Navigation -->
                        <nav class="nav-links mx-lg-2" aria-label="Sections" style="display:flex;  gap:40px;">
                            <a href="/" style=" text-decoration:none; font-size:16px; font-weight:500;">Home</a>
                            <a asp-action="Explore" style=" text-decoration:none; font-size:16px; font-weight:500;">Explore</a>
                            <a asp-action="Artists" style=" text-decoration:none; font-size:16px; font-weight:500;">Artists</a>
                            <a asp-action="About" style=" text-decoration:none; font-size:16px; font-weight:500;">About us</a>
                        </nav>

                    </div>
                  

                



            </header>

        }
    }


    <main class=" main-content" style="margin-top:@(hideHeader ? "0" : "60px")">
        @RenderBody()
    </main>
    <!-- Footer Partial View -->
    <footer class="gallery-footer">
        <div class="footer-container">
            <!-- Brand Logo -->
            <div class="footer-logo-section">
                <img src="/images/logo/logo.svg" />
                <h3 class="footer-logo">Aj Gallery</h3>
            </div>

            <!-- Contact Details -->
            <div class="footer-contact-section">
                <span class="footer-contact-item">
                    <i class="fa-solid fa-envelope"></i>
                    <a href="mailto:hello@artgallery.com" class="contact-link">hello@artgallery.com</a>
                </span>
                <span class="footer-contact-item">
                    <i class="fa-solid fa-phone"></i>
                    <a href="tel:+15551234567" class="contact-link">+1 (555) 123-4567</a>
                </span>
            </div>

            <!-- Social Icons -->
            <div class="footer-social">
                <a href="https://instagram.com" class="social-icon" aria-label="Instagram" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                </a>
                <a href="https://facebook.com" class="social-icon" aria-label="Facebook" target="_blank">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                    </svg>
                </a>
                <a href="https://twitter.com" class="social-icon" aria-label="Twitter" target="_blank">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.953 4.57a10 10 0 002.856-3.51 9.98 9.98 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417a9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                    </svg>
                </a>
                <a href="https://linkedin.com" class="social-icon" aria-label="LinkedIn" target="_blank">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z" />
                    </svg>
                </a>
            </div>

            <!-- Copyright -->
            <div class="footer-copyright">
                <p>&copy; <span id="year"></span> ArtGallery. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        document.getElementById('year').textContent = new Date().getFullYear();
    </script>


    <nav class="mobile-nav d-md-none">
    

            <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
               <i class='fa-solid fa-house'></i>
                      
            </a>


       



        <a asp-controller="Home" asp-action="Explore" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Explore" ? "active" : "")">
            <i class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Explore" ? "fa-solid fa-compass" : "fa-regular fa-compass")"></i>
        </a>
        <a asp-controller="Home" asp-action="Artists" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Artists" ? "active" : "")">
            <i class="fa-solid fa-palette" ></i>
        </a>
        <a asp-controller="Home" asp-action="About" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")">
            <i class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "fa-solid fa-user" : "fa-regular fa-user")"></i>
        </a>
    </nav>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>

    

</script>
</body>
</html>

