@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Artistry</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-K5m8z0D9L5L4vE1FqOZpMyFvOB+vSTO0jqhr+V+2E6lbI2e+zQqE5xytHZhGm7uOIf9vPoG7+nCxTxuQ+z+XWg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/components.css" />
    @{
        var title = ViewData["css"]?.ToString() ?? "Artistry";
    }

    <link rel="stylesheet" href="~/css/@(title).css" />

 

</head>
<body>
    @{
        var hideHeader = ViewData["HideHeader"] as bool? ?? false;
        if (!hideHeader)
        {
            <header class="site-header">
                <div class="container nav justify-content-between" role="navigation" aria-label="Main">



                    <div style="display:flex; align-items:center; justify-content:left; gap:40px; max-width:1200px; margin:0 auto;">

                        <!-- Logo Section -->
                        <a asp-controller="Home" asp-action="Index">
                            <div class="logo" style="display:flex; align-items:center; gap:10px; font-size:20px; font-weight:600;">
                                <img src="/images/logo/logo.png" width="40" height="40" />
                                <span>AJ Gallery</span>
                            </div>
                        </a>


                        <!-- Navigation -->
                        <nav class="nav-links mx-lg-2" aria-label="Sections" style="display:flex;  gap:40px;">
                            <a href="#" style=" text-decoration:none; font-size:16px; font-weight:500;">Home</a>
                            <a href="#" style=" text-decoration:none; font-size:16px; font-weight:500;">Exhibitions</a>
                            <a asp-action="Artists" style=" text-decoration:none; font-size:16px; font-weight:500;">Artists</a>
                            <a href="#" style=" text-decoration:none; font-size:16px; font-weight:500;">Events</a>
                        </nav>

                    </div>
                    <button class="custom-btn">LOG IN</button>

                </div>



            </header>

        }
    }


    <main class="container" style="margin-top:@(hideHeader ? "0" : "60px")">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container footer-grid">
            <div class="footer-brand">
                <div class="brand">Artistry</div>
                <div class="social">
                    <a aria-label="Instagram" href="#"><span class="sr-only">Instagram</span><svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true"><path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7zm5 3.5A5.5 5.5 0 1 1 6.5 13 5.5 5.5 0 0 1 12 7.5zm0 2A3.5 3.5 0 1 0 15.5 13 3.5 3.5 0 0 0 12 9.5zm6.25-3.25a1.25 1.25 0 1 1-1.25 1.25 1.25 1.25 0 0 1 1.25-1.25z" fill="currentColor" /></svg></a>
                    <a aria-label="Twitter" href="#"><span class="sr-only">Twitter</span><svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true"><path d="M22 5.8c-.6.2-1.2.4-1.8.4.7-.4 1.2-1 1.5-1.8-.6.4-1.3.6-2 .8a3.2 3.2 0 0 0-5.5 2.2c0 .3 0 .5.1.8A9 9 0 0 1 3.1 4.7a3.2 3.2 0 0 0 1 4.2 3.1 3.1 0 0 1-1.5-.4v.1c0 1.6 1.1 3 2.7 3.4a3.3 3.3 0 0 1-1.4.1 3.2 3.2 0 0 0 3 2.2A6.4 6.4 0 0 1 2 16.8 9 9 0 0 0 6.9 18c7.4 0 11.4-6.2 11.4-11.5v-.5c.8-.5 1.4-1.1 1.7-2z" fill="currentColor" /></svg></a>
                    <a aria-label="Facebook" href="#"><span class="sr-only">Facebook</span><svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true"><path d="M13 22V12h3l1-4h-4V6c0-1.1.4-2 2-2h2V1h-3c-3 0-5 2-5 5v2H6v4h3v10z" fill="currentColor" /></svg></a>
                </div>
            </div>
            <div class="footer-col">
                <h4>Explore</h4>
                <a href="#">New</a>
                <a href="#">Popular</a>
                <a href="#">Curated</a>
                <a href="#">Genres</a>
            </div>
            <div class="footer-col">
                <h4>Community</h4>
                <a href="#">Forums</a>
                <a href="#">Events</a>
                <a href="#">Newsletter</a>
                <a href="#">Support</a>
            </div>
            <div class="footer-col">
                <h4>About</h4>
                <a href="#">Our Story</a>
                <a href="#">Careers</a>
                <a href="#">Contact</a>
                <a href="#">Press</a>
            </div>
        </div>
        <div class="container footer-bottom">
            <p>© @DateTime.UtcNow.Year Artistry. All rights reserved.</p>
            <nav class="footer-legal">
                <a href="#">Terms</a>
                <a href="#">Privacy</a>
                <a href="#">Cookies</a>
            </nav>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

